<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_payslip_view_form_inherited_for_overtime" model="ir.ui.view">
        <field name="name">hr.payslip.form.inherited.worked.days</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <!-- Locate the worked_days_line_ids tree and add the computed fields after 'name' -->
            <xpath expr="//field[@name='worked_days_line_ids']/tree/field[@name='name']" position="after">
                <field name="overtime_regular_hours" optional="hide"/>
                <field name="overtime_weekly_off_hours" optional="hide"/>
                <field name="overtime_public_holiday_hours" optional="hide"/>
                <field name="total_overtime_hours" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>

