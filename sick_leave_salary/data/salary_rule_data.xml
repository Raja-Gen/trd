<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Fully Paid Rule -->
        <record id="rule_sick_full" model="hr.salary.rule">
            <field name="name">Sick Leave - Fully Paid</field>
            <field name="code">SICK_FULL</field>
            <field name="sequence">10</field>
            <field name="deduct_sick_leave" eval="True"/>
            <field name="min_days">0</field>
            <field name="max_days">15</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="condition_select">none</field>
            <field name="amount_select">percentage</field>
            <field name="amount_percentage">0</field>
            <field name="amount_percentage_base">contract.wage</field>
        <field name="struct_id" ref="kuwait_payroll.kuwait_employee_payroll_structure"/>
        </record>

