<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Paid Maternity Leave Rule -->
        <record id="salary_rule_paid_maternity_leave" model="hr.salary.rule">
            <field name="name">Paid Maternity Leave</field>
            <field name="code">PAID_MATERNITY</field>
            <field name="sequence">20</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="condition_select">python</field>
            <field name="condition_python">
result = payslip._get_maternity_leave_days(payslip, 'paid')
            </field>
            <field name="active">True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
result = payslip._get_maternity_leave_days(payslip, 'paid')
            </field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="struct_id" ref="kuwait_payroll.kuwait_employee_payroll_structure"/>
        </record>

        <!-- Unpaid Maternity Leave Rule -->
        <record id="salary_rule_unpaid_maternity_leave" model="hr.salary.rule">
            <field name="name">Unpaid Maternity Leave</field>
            <field name="code">UNPAID_MATERNITY</field>
            <field name="sequence">30</field>
            <field name="category_id" ref="hr_payroll.BASIC"/>
            <field name="condition_select">python</field>
            <field name="condition_python">
result = payslip._get_maternity_leave_days(payslip, 'unpaid')
            </field>
            <field name="active">True</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
result = -payslip._get_maternity_leave_days(payslip, 'unpaid')
            </field>
            <field name="struct_id" ref="kuwait_payroll.kuwait_employee_payroll_structure"/>
        </record>

    </data>
</odoo>

